<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/titlu"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo_heap_sort" />
    <TextView
        android:id="@+id/textView3"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:text="@string/introduce_vectorul"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/vectorul_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="155dp"
        android:ems="100"
        android:inputType="textPersonName"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/ok_image_view"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="210dp"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/ok_image_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp" />

    <TextView
        android:id="@+id/heap_sort_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="155dp"
        android:layout_marginStart="16dp"
        android:text="@string/heap_string"
        android:layout_marginLeft="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/heapify_text_view"
        android:layout_width="270dp"
        android:layout_height="103dp"
        style="@style/TextVectorHeap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:visibility="invisible"/>


</RelativeLayout>